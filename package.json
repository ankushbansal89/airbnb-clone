{
  "name": "airbnb-clone",
  "version": "1.0.0",
  "description": "This is the clone of airbnb using react, graphql, serverless etc",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "./packages/**"
  ],
  "scripts": {
    "bootstrap": "lerna clean -y && lerna bootstrap --hoist",
    "format": "prettier \"{packages}/**/src/*.{js,ts,html}\" --write",
    "lint": "eslint \"./packages/**/src/*.{js,jsx,ts,tsx}\"",
    "test": "lerna run test --stream",
    "build": "lerna run build --stream",
    "start": "lerna run start --stream"
  },
  "keywords": [
    "React",
    "graphql",
    "appollo",
    "serverless",
    "airbnb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "npm run lint && npm run format"
  }
}
